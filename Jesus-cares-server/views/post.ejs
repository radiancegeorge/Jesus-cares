<!DOCTYPE html>
<html class="no-js" lang="zxx">
  <head>
    <link rel="stylesheet" href="css/publicStyle.css" />

    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Jesus Cares | Charity</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- <link rel="manifest" href="site.webmanifest"> -->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.png" />
    <!-- Place favicon.ico in the root directory -->

    <!-- CSS here -->
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/owl.carousel.min.css" />
    <link rel="stylesheet" href="css/magnific-popup.css" />
    <link rel="stylesheet" href="css/font-awesome.min.css" />
    <link rel="stylesheet" href="css/themify-icons.css" />
    <link rel="stylesheet" href="css/nice-select.css" />
    <link rel="stylesheet" href="css/flaticon.css" />
    <link rel="stylesheet" href="css/gijgo.css" />
    <link rel="stylesheet" href="css/animate.css" />
    <link rel="stylesheet" href="css/slicknav.css" />
    <link rel="stylesheet" href="css/style.css" />
  </head>

  <body>
    <%- include('partial/header.ejs'); %>

    <!-- bradcam_area_start  -->
    <%- include('partial/jumbo-single-post.ejs') %>
    <!-- bradcam_area_end  -->

    <!--================Blog Area =================-->
    <section class="blog_area single-post-area section-padding">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 posts-list">
            <div class="single-post">
              <div class="feature-img">
                <% if(data.image_name){%>
                <img
                  class="img-fluid"
                  src="uploads/coverPhotos/<%= data.image_name %> "
                  alt=""
                />
                <% } %>
                <!-- //add if video also -->
                <% if(data.video_name){%>
                <video
                  width="100%"
                  autoplay
                  controls
                  src="uploads/videos/<%= data.video_name %> "
                ></video>
                <% } %>
              </div>
              <div class="blog_details">
                <h2><%= data.heading %></h2>

                <%- data.content %>
              </div>
              <% if(data.document_name){%>
              <a
                href="uploads/docs/<%= data.document_name %> "
                class="document"
                download
                >Get Document</a
              >
              <%} %>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="blog_right_sidebar">
              <!-- recent post -->
              <%- include('partial/latest.ejs') %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--================ Blog Area end =================-->
    <%- include('partial/donationAccount.ejs') %>
    <!-- footer_start  -->
    <%- include('partial/footer.ejs') %>
    <!-- footer_end  -->

    <!-- JS here -->
    <script src="js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="js/vendor/jquery-1.12.4.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/isotope.pkgd.min.js"></script>
    <script src="js/ajax-form.js"></script>
    <script src="js/waypoints.min.js"></script>
    <script src="js/jquery.counterup.min.js"></script>
    <script src="js/imagesloaded.pkgd.min.js"></script>
    <script src="js/scrollIt.js"></script>
    <script src="js/jquery.scrollUp.min.js"></script>
    <script src="js/wow.min.js"></script>
    <script src="js/nice-select.min.js"></script>
    <script src="js/jquery.slicknav.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/gijgo.min.js"></script>
    <!--contact js-->
    <script src="js/contact.js"></script>
    <script src="js/jquery.ajaxchimp.min.js"></script>
    <script src="js/jquery.form.js"></script>
    <script src="js/jquery.validate.min.js"></script>
    <script src="js/mail-script.js"></script>

    <script src="js/main.js"></script>
    <script>
      $(".datepicker").datepicker({
        iconsLibrary: "fontawesome",
        icons: {
          rightIcon: '<span class="fa fa-calendar"></span>',
        },
      });

      $(".timepicker").timepicker({
        iconsLibrary: "fontawesome",
        icons: {
          rightIcon: '<span class="fa fa-clock-o"></span>',
        },
      });
    </script>
    <script src="js/downloadDocument.js"></script>
  </body>
</html>
